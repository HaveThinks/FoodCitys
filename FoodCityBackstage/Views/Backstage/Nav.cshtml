<div class="modal fade" id="myModals1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    修改密码
                </h4>
            </div>
            <div class="modal-body" id="uppwd">
                <div class="form-group">
                    <label for="AdminName"><span class="glyphicon glyphicon-user"></span>原密码</label>
                    @Html.TextBox("old", null, new { placeholder = "请输入", Class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="AdminName"><span class="glyphicon glyphicon-user"></span>新密码</label>
                    @Html.TextBox("new", null, new { placeholder = "请输入", Class = "form-control" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="submit1">
                    submit
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<script src="~/Content/Backstage/jquery-3.3.1.min.js"></script>
<script>
    $(function () {
        $("#upp").click(function () {
            $("#myModals1").modal("show");
        });
        $("#submit1").click(function () {
                var old = $("#old").val();
                var news= $("#new").val();
             $.ajax({
                 url: "@Url.Action("UpdatePwd","Admin")",
                 data: { old: old, news: news },
                    type: "post",
                    success: function (data) {
                        alert(data);
                        location.href = "@Url.Action("Layout", "Login")";
                    }
                })
        })
    })
</script>

